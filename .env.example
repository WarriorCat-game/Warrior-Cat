# Server configuration
PORT=3000
NODE_ENV=development

# Database Settings
MONGODB_URI=mongodb://localhost:27017/warrior_cat

# JWT Settings
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# Blockchain Settings
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# Admin wallet - DO NOT commit the actual private key to git
# This is used for token minting and NFT creation
ADMIN_PRIVATE_KEY=your_private_key_here

# Game configuration
GAME_VERSION=0.1.0
GAME_NAME=Warrior Cat
GAME_DESCRIPTION=An original blockchain game built on the Solana ecosystem

# Web3 configuration
WCAT_TOKEN_ADDRESS=your_token_address_here
NFT_COLLECTION_ADDRESS=your_nft_collection_address_here

# Email Settings (for future use)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=

# AWS S3 Settings (for future use)
AWS_S3_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8080

# Logging Level
LOG_LEVEL=info 